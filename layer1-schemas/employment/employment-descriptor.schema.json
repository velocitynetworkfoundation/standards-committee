{
  "title": "employment-descriptor.schema",
  "$id": "https://velocitynetwork.foundation/schemas/employment-descriptor",
  "allOf": [
    {
      "$ref": "../json-ld-context.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "legalEmployer": {
          "$ref": "../subtypes/organization.schema.json"
        },
        "role": {
          "type": "string",
          "description": "The role the person has in the organization."
        },
        "description": {
          "type": "string",
          "description": "A detailed description of the position."
        },
        "employmentType": {
          "type": "string",
          "enum": [
            "contract",
            "temporary",
            "permanent",
            "internship",
            "full time",
            "part time"
          ],
          "description": "Any of: full-time, part-time, contract, temporary, permanent, internship. "
        },
        "place": {
          "$ref": "../subtypes/place.schema.json"
        },
        "alignment ": {
          "type": "array",
          "description": "A public resource to which the employment position is aligned.",
          "items": {
            "$ref": "../subtypes/alignment.schema.json"
          }
        }
      },
      "required": [
        "legalEmployer",
        "role"
      ]
    }
  ],
  "x-internal": true,
  "examples": [
    {
      "@context": "string",
      "legalEmployer": {
        "@context": "string",
        "name": "string",
        "identifier": "string",
        "place": {
          "@context": "string",
          "name": "string",
          "addressLocality": "string",
          "addressRegion": "string",
          "addressCountry": "string"
        }
      },
      "role": "string",
      "description": "string",
      "employmentType": "contract",
      "place": {
        "@context": "string",
        "name": "string",
        "addressLocality": "string",
        "addressRegion": "string",
        "addressCountry": "string"
      },
      "alignment ": {
        "@context": "string",
        "targetName": "string",
        "targetUrl": "http://example.com",
        "targetDescription": "string",
        "targetCode": "string",
        "targetFramework": "string"
      }
    }
  ]
}