{
  "title": "person.schema",
  "$id": "https://velocitynetwork.foundation/schemas/person",
  "allOf": [
    {
      "$ref": "../json-ld-context.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "givenName": {
          "type": "string",
          "description": "The given name or first name of the person. "
        },
        "familyName": {
          "type": "string",
          "description": "The family name or surname of the person. "
        },
        "middleName": {
          "type": "string",
          "description": "The middle name of the person. "
        },
        "namePrefix": {
          "type": "string",
          "description": "A prefix to the name such as Dr or Sir. "
        },
        "nameSuffix": {
          "type": "string",
          "description": "A suffix to the name such as Jr. or Sr. "
        },
        "birthDate": {
          "type": "string",
          "format": "date",
          "description": "The date of birth of the person. "
        },
        "birthPlace": {
          "$ref": "./place.schema.json"
        },
        "gender": {
          "type": "string",
          "enum": [
            "Male",
            "Female"
          ],
          "description": "The gender of the person. "
        }
      }
    }
  ],
  "required": [
    "givenName"
  ],
  "examples": [
    {
      "givenName": "Olivia",
      "familyName": "Hafez",
      "additionalName": "Melanie",
      "namePrefix": "Dr",
      "birthDate": "1994-06-20",
      "birthPlace": {
        "addressLocality": "Baltimore",
        "addressRegion": "MD",
        "addressCountry": "US"
      },
      "gender": "Female"
    }
  ]
}
