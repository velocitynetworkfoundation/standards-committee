{
  "title": "passport.schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://velocitynetwork.foundation/schemas/passport",
  "allOf": [
    {
      "$ref": "../json-ld-context.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "authority": {
          "$ref": "../subtypes/organization.schema.json"
        },
        "validity": {
          "$ref": "../subtypes/validity.schema.json"
        },
        "person": {
          "$ref": "../subtypes/person.schema.json"
        },
        "identifier": {
          "type": "string"
        },
        "nationality": {
          "type": "string",
          "pattern": "^[A-Z]{2}$"
        }
      }
    }
  ], 
  "required": [
    "authority",
    "validity",
    "person",
    "identifier",
    "nationality"
  ],
  "x-examples": {
    "Andrew's UK Passport": {
      "@context": "https://velocitynetwork.foundation/contexts/id-document",
      "authority": {
        "name": "HM Passport office",
        "place": {
          "addressLocality": "London",
          "addressRegion": "ENG",
          "addressCountry": "UK"
        }
      },
      "validity": {
        "validFrom": "2011-11-06",
        "validUntil": "2021-11-06"
      },
      "person": {
        "givenName": "Andrew",
        "familyName": "Hall",
        "birthDate": "1977-08-24",
        "birthPlace": {
          "addressRegion": "ENG",
          "addressCountry": "UK"
        },
        "gender": "Male"
      },
      "identifier": "1081234567",
      "nationality": "GB"
    }
  }
}