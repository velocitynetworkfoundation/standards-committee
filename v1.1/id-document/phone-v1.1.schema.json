{
  "title": "Phone",
  "$id": "https://velocitynetwork.foundation/schemas/phone-v1.1",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "@context": {
      "$ref": "../json-ld-context.schema.json"
    },
    "phone": {
      "type": "string",
      "pattern": "^\\+[1-9]\\d{1,14}$",
      "minLength": 8,
      "maxLength": 15,
      "description": "The phone number including prefix."
    }
  },
  "required": [
    "phone"
  ],
  "examples": [
    {
      "@context": "https://velocitynetwork.foundation/contexts/phone",
      "phone": "+19177777777"
    }
  ]
}
