{
  "title": "Person",
  "$id": "https://velocitynetwork.foundation/schemas/person-v1.1",
  "allOf": [
    {
      "$ref": "../json-ld-context.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "givenName": {
          "type": "string",
          "description": "The given name or first name of the person.",
          "maxLength": 64
        },
        "familyName": {
          "type": "string",
          "description": "The family name or surname of the person.",
          "maxLength": 64
        },
        "middleName": {
          "type": "string",
          "description": "The middle name of the person.",
          "maxLength": 256
        },
        "namePrefix": {
          "type": "string",
          "description": "A prefix to the name such as Dr or Sir.",
          "maxLength": 8
        },
        "nameSuffix": {
          "type": "string",
          "description": "A suffix to the name such as Jr. or Sr.",
          "maxLength": 16
        },
        "birthDate": {
          "type": "string",
          "format": "date",
          "description": "The date of birth of the person. "
        },
        "birthPlace": {
          "$ref": "./place-v1.1.schema.json"
        },
        "gender": {
          "type": "string",
          "enum": [
            "Male",
            "Female",
            "Other"
          ],
          "description": "The gender of the person. "
        }
      }
    }
  ],
  "required": [
    "givenName",
    "birthDate",
    "familyName"
  ],
  "examples": [
    {
      "givenName": "Olivia",
      "familyName": "Hafez",
      "middleName": "Melanie",
      "namePrefix": "Dr",
      "birthDate": "1994-06-20",
      "birthPlace": {
        "addressLocality": "Baltimore",
        "addressRegion": "US-MD",
        "addressCountry": "US"
      },
      "gender": "Female"
    },
    {
      "givenName": "Oliver",
      "familyName": "Barrett ",
      "namePrefix": "string",
      "birthDate": "1960-02-11",
      "birthPlace": {
        "addressLocality": "Lowell",
        "addressRegion": "US-MA",
        "addressCountry": "US"
      },
      "gender": "Other",
      "nameSuffix": "Jr"
    },
    {
      "givenName": "Joan Manuel ",
      "familyName": "Serrat Teresa",
      "birthDate": "1943-12-27",
      "birthPlace": {
        "addressLocality": "Barcelona",
        "addressRegion": "ES-CT",
        "addressCountry": "ES"
      },
      "gender": "Male"
    }
  ]
}